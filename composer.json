{
    "name": "webdriver-binary/binary-geckodriver",
    "type": "composer-plugin",
    "license": "MIT",
    "description": "Utility for downloading GeckoDriver (Firefox automation) binary for current os/platform",
    "require": {
        "php": ">=7.2",
        "composer-plugin-api": "^1.0 | ^2.0",
        "webdriver-binary/webdriver-binary-downloader": "^4.0.0"
    },
    "replace": {
        "vaimo/binary-geckodriver": "*",
        "lanfest/binary-edgedriver": "*"
    },
    "support": {
        "source": "https://github.com/webdriver-binary/binary-geckodriver",
        "docs": "https://github.com/webdriver-binary/binary-geckodriver",
        "issues": "https://github.com/webdriver-binary/binary-geckodriver/issues"
    },
    "keywords": [
        "geckodriver",
        "firefox automation",
        "testing",
        "test-automation",
        "acceptance testing",
        "browser testing",
        "composer plugin",
        "composer extension",
        "browser driver",
        "webdriver",        
        "downloader",
        "binary downloader",
        "binary"
    ],
    "autoload": {
        "psr-4": {
            "WebdriverBinary\\GeckoDriver\\": "src"
        }
    },
    "extra": {
        "class": "WebdriverBinary\\GeckoDriver\\Plugin"
    }
}
